#call me irresponsible, by bobby darin, song submod by my-otter-self on reddit for MONIKA AFTER STORY

init 5 python:
    addEvent(
        Event(
            persistent._mas_songs_database,
            eventlabel="otter_song_callmeirresponsible",
            category=[mas_songs.TYPE_SHORT],
            prompt="Call Me Irresponsible",
        ),
        code="SNG"
    )

label otter_song_callmeirresponsible:
    m "{i}~Call me irresponsible~{/i}"
    m "{i}~Call me unreliable~{/i}"
    m "{i}~Throw in undependable, too~{/i}"
    m "{i}~Do my foolish alibis bore you?~{/i}"
    m "{i}~Well, I'm not too clever, I~{/i}"
    m "{i}~I just adore you~{/i}"
    m "{i}~So, call me unpredictable~{/i}"
    m "{i}~Tell me I'm impractical~{/i}"
    m "{i}~Rainbows, I'm inclined to pursue~{/i}"
    m "{i}~Call me irresponsible~{/i}"
    m "{i}~Yes, I'm unreliable~{/i}"
    m "{i}~But it's undeniably true~{/i}"
    m "{i}~That I'm irresponsibly mad for you~{/i}"
    m "..."

